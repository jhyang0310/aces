<div class="text-center">
  <div class="faqpage">
 {% for block in section.blocks %}
    <div class="accord-sec">
        {% if block.settings.quest != blank %}
          <div class="accordion accordionButton {% if forloop.first %}on{% endif %}" id="section{{forloop.index}}">
              <span class="title">{{block.settings.quest}}</span>
            <span class="icon_toggle"></span>
          </div>
        {% endif %}
        {% if block.settings.answer %}
            <div class="content accordionContent" {% if forloop.first %}style="display:block;"{% endif %}>
              {{block.settings.answer}}
            </div>
        {% endif %}
      </div>
  {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "FAQ",
    "settings": [
		
	],
	  "blocks": [
    {
      "type": "faq",
      "name":"faq",
      "settings": [
        {
			"type":"text",
			"id":"quest",
			"label":"Question"
		},
		{
			"type":"textarea",
			"id":"answer",
			"label":"Answer"
		}
      ]
    }
  ]
  }
{% endschema %}

